<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smartfactory.hotspot" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WifiHotSpot</name>
    <description>
        A sample Cordova application for WiFi hotspot create and setup.
    </description>
    <author email="toallex@gmail.com" href="http://petrenkodesign.com">
        Alex Petrenko
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="29" />
        <!-- <preference name="AndroidXEnabled" value="true" /> -->
        <allow-intent href="market:*" />
        <icon src="www/img/logo.png" density="xxxhdpi"/>
        <icon src="www/img/logo.png" density="hdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
